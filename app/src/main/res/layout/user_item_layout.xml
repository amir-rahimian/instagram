<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    >

    <TextView
        android:id="@+id/RVprofileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="name"
        android:textColor="@color/colorAccent"
        android:textSize="15sp"
        android:transitionName="profileName"
        app:layout_constraintBottom_toBottomOf="@+id/RVprofile_img"
        app:layout_constraintLeft_toRightOf="@+id/RVprofile_img"
        app:layout_constraintStart_toEndOf="@+id/RVprofile_img"
        app:layout_constraintTop_toTopOf="@+id/RVprofile_img" />

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/RVprofile_img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="8dp"
        android:src="@drawable/ob_pro"
        android:transitionName="profilePhoto"
        app:civ_border_color="@color/colorAccent"
        app:civ_border_width="0.5dp"
        app:civ_shadow="true"
        app:civ_shadow_color="@color/colorPrimaryDark"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/RVonprofName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-smallcaps"
        android:maxLength="1"
        android:textColor="@color/colorAccent"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/RVprofile_img"
        app:layout_constraintEnd_toEndOf="@+id/RVprofile_img"
        app:layout_constraintLeft_toRightOf="@+id/RVprofile_img"
        app:layout_constraintStart_toStartOf="@+id/RVprofile_img"
        app:layout_constraintTop_toTopOf="@+id/RVprofile_img" />

</androidx.constraintlayout.widget.ConstraintLayout>